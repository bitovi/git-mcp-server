{
  "mcpServers": {
    "git-mcp-server": {
      "command": "node",
      "args": ["/path/to/dist/index.js"],
      "env": {
        "MCP_TRANSPORT_TYPE": "stdio",
        "MCP_LOG_LEVEL": "debug"
      }
    },
    "git-mcp-server-http": {
      "command": "node",
      "args": ["/path/to/dist/index.js"],
      "env": {
        "MCP_TRANSPORT_TYPE": "http",
        "MCP_HTTP_PORT": "3010",
        "MCP_HTTP_HOST": "127.0.0.1",
        "MCP_LOG_LEVEL": "debug"
      }
    }
  }
}
